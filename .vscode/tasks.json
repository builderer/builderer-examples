{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "${command:python.interpreterPath}",
      "windows": {
        "args": [
          "-m",
          "builderer",
          "--config=windows",
          "build",
          "--build_config=debug",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      },
      "osx": {
        "args": [
          "-m",
          "builderer",
          "--config=macos",
          "build",
          "--build_config=debug",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      "linux": {
        "args": [
          "-m",
          "builderer",
          "--config=linux",
          "build",
          "--build_config=debug",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build_release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "${command:python.interpreterPath}",
      "windows": {
        "args": [
          "-m",
          "builderer",
          "--config=windows",
          "build",
          "--build_config=release",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      },
      "osx": {
        "args": [
          "-m",
          "builderer",
          "--config=macos",
          "build",
          "--build_config=release",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      "linux": {
        "args": [
          "-m",
          "builderer",
          "--config=linux",
          "build",
          "--build_config=release",
          "apps:triangle"
        ],
        "problemMatcher": [
          "$gcc"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}